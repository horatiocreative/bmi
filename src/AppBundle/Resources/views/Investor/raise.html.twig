{% extends 'CVSeismicBundle::seismic_network.html.twig' %}

{% block header %}
    {% include('CVSeismicBundle:Common:header.html.twig') with { active :'raise' } %}
{% endblock %}

{% block bodyContent %}
	<div class="container-fluid content-breather-small" id="breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-6">
					<h4>Apply to Raise Capital</h4>
				</div><!-- End of column one -->
				<div class="col-md-6 col-sm-6 text-right">
					<ol class="breadcrumb">
						<li><a href="{{ path('cv_seismic_home', {'network': network.urlname}) }}">Home</a></li>
						<li class="inactive">Raise</li>
					</ol>
				</div><!-- End of column two -->
			</div><!-- End of row -->	
		</div><!-- End of container -->
	</div><!-- End of fluid container -->

	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- The following code is for the forms error and success messages -->		
				<div class="slickwrap">
					<div class="slickreporting">
						<div class="successcontainer text-center"></div><!-- Success message -->
						<div class="errorcontainer text-center"><!-- Error message -->
							<div class="errorshutter"></div>
							<div class="slickerror"></div>
						</div><!-- End of error message -->
					</div><!-- End of error and success messages -->
				    
				    <form method="post" id="slickform" action="javascript:slickcontactparse();">
						<!-- Form elements for the name field -->
					    <div class="row">
							<div class="col-md-1"><label><span>*</span>Name</label></div>
							<div class="col-md-5"><input id="name" name="name" type="text" value=""></div>
							
							<!-- Form elements for the phone field -->
							<div class="col-md-1"><label><span>*</span>Phone</label></div>
							<div class="col-md-5"><input id="phone" name="phone" type="text" value=""></div>
					    </div><!-- End of row -->
					    
				    	<!-- Form elements for the Email field -->
				    	<div class="row">
				    		<div class="col-md-1"><label><span>*</span>Email</label></div>
				    		<div class="col-md-5"><input id="email" name="email" type="text" value=""></div>
				    		
				    		<!-- Form elements for the subject field -->
				    		<div class="col-md-1"><label><span>*</span>Model</label></div>
				    		<div class="col-md-5">  
								<select id="subject">
									<option value="">Please Select</option>
									<option value="sales">Equity</option>
									<option value="support">Convertible Debt</option>
							    </select>
				        	</div>
				    	</div><!-- End of row -->
				    
					    <!-- Form elements for the message area -->
					    <div class="row">
							<div class="col-md-2">	<label><span>*</span>Business Plan</label></div>
							<div class="col-md-10"> 
								<textarea name="comment" id="comment" cols="5" rows="5" class="largertextarea">
								</textarea>
							</div>
					    </div><!-- End of row -->
				    
						<!-- Start of spam protection field, and submit button -->
						<div class="row">
							<div class="col-md-12">
								<div class="row-centered">
									<div class="col-md-2 col-centered text-center slickbutton">
										<button name="submit" type="submit" value="Contact Us" 
										class="btn btn-lg branding-background  ">
											Submit
										</button>
									</div><!-- End of column -->
								</div><!-- End of inner row -->
							</div><!-- End of column -->
						</div><!-- End of row -->
					</form><!-- End of entire form -->
				</div><!-- End of slickwrap for wrapper -->
			</div><!-- End of column -->
		</div><!-- End of row -->
	</div><!-- End of container -->
			
	<br />

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('bundles/cvseismic/js/bootstrap/bootstrap.js') }}"></script>
	<script src="{{ asset('bundles/cvseismic/js/css3-animate-it.js') }}"></script>
	<script src="{{ asset('bundles/cvseismic/js/bootstrap-hover-dropdown.js') }}"></script>
	<script src="{{ asset('bundles/cvseismic/js/modernizr.js') }}"></script>
	<script src="{{ asset('bundles/cvseismic/js/Slickform.js') }}"></script>
	<!-- Google maps api -->
	<script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
	<script src="{{ asset('bundles/cvseismic/js/maps.js') }}"></script>
	<script src="{{ asset('bundles/cvseismic/js/scripts.js') }}"></script>
{% endblock %}